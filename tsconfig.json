{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2017",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false
  },
  "include": ["./src/**/*.ts", "./src/**/*.spec.ts"],
  "exclude": ["node_modules"]
}
